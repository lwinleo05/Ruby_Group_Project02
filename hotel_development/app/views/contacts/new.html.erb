<section class = 'sec-contact'>

  <header>
      <%= render "home/nav" %>
  </header>

  <div class = 'l-inner clearfix'>

    <div class = 'blk-form'>

      <%= form_with  model: @contact do |form| %>

        <div class="form-contact">
          <%= form.label :query, "Name"  %><br>
          <%= form.text_field :name   %><br>
        </div>

        <div class="form-contact">
          <%= form.label :query, "Email"  %><br>
          <%= form.text_field :email  %><br>
        </div>

        <div class="form-contact">
          <%= form.label :query, "Message"  %><br>
          <%= form.text_area(:message, size: '40x20') %>
        </div>

        <%= form.hidden_field :nickname, :hint => 'Leave this field blank!' %>

        <%= form.submit "Send Message" , class: 'common-btn contact-btn'  %>
      
      <% end %>

    </div>

    <div id="contact-txt">

      <h3>We 'd love to hear from you.</h3>

      <p>Whether you have a question about hotel, rooms ,<br> reservations or 
      anything else, our team is ready <br> to answer all your questions.</p>
    
    </div>

  </div>

</section>

<%= render "home/footer" %>